<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.sm.sharemobilityapp.StartFragment"
        android:label="sharemobility"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sm.sharemobilityapp.LoginFragment"
        android:label="sharemobility"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sm.sharemobilityapp.ProfileFragment"
        android:label="sharemobility"
        tools:layout="@layout/fragment_profile" >
    </fragment>
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"/>
    <action
        android:id="@+id/action_global_startFragment"
        app:destination="@id/startFragment"/>
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"/>

</navigation>